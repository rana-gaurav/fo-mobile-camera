<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:visibility="visible"
    android:background="#3fffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <top.defaults.camera.CameraView
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:mode="image"
        app:aspectRatio="4:3"
        app:autoFocus="true"
        app:facing="back"
        app:fillSpace="false"
        app:flash="auto"
        app:pinchToZoom="false"
        app:showFocusIndicator="true"/>

    <ImageButton
        android:id="@+id/flash_torch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/light_off"
        android:background="?android:selectableItemBackground"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Save"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/light_off" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Back"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Save"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/zoomValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_above="@+id/actions_layout"
        android:gravity="center_horizontal"
        android:text="@string/recording"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/actions_layout"
        android:padding="4dp"
        android:background="#3fffffff">

        <top.defaults.view.TextButton
            android:id="@+id/chooseRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/ratio"
            android:textColor="@android:color/white"
            app:underline="true"
            app:textEffect="animateSize"/>

        <top.defaults.view.TextButton
            android:id="@+id/chooseSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/image_size"
            android:textColor="@android:color/white"
            app:underline="true"
            app:textEffect="animateSize"/>

        <CheckBox
            android:id="@+id/fillSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fill"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"/>

        <CheckBox
            android:id="@+id/enableZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zoom"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"/>

        <top.defaults.view.TextButton
            android:id="@+id/flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/flash_auto"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_flash_auto"
            app:underline="true"
            app:textEffect="animateColor"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/actions_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <top.defaults.view.TextButton
            android:id="@+id/switch_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:text="@string/video_mode" />

        <ImageView
            android:id="@+id/action"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="visible"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:id="@+id/flip"
            android:onClick="flip"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:src="@drawable/ic_switch_camera"
            android:background="?android:selectableItemBackground"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_preview"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="295dp"
        android:layout_weight="0.9"
        android:layout_height="0dp"
        android:rotation="270" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="@dimen/item_height"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/pink_out_line"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/rb_save"
            android:background="@drawable/toggle_widget_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/green" />

        <RadioButton
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/rb_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background"
            android:button="@null"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/red" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:visibility="gone"
        android:src="@drawable/ic_del" />

    </LinearLayout>

    <FrameLayout
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_alignParentRight="true"
       android:layout_alignParentBottom="true">

       <ImageView
           android:id="@+id/iv_hint_action"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginLeft="20dp"
           android:src="@drawable/ic_max"
           android:visibility="gone"
           android:rotation="0" />

<!--        <ImageView-->
<!--            android:id="@+id/iv_hint"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:visibility="visible"-->
<!--            android:clickable="true"-->
<!--            android:rotation="0" />-->

   </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_list"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="#3fffffff"
        android:paddingStart="@dimen/padding_start"
        android:paddingEnd="@dimen/padding_end"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:id="@+id/lv1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_marginLeft="5dp"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/custom_border"/>

    </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:foregroundGravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_tint"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="#E6000000"/>


        <ImageView
            android:id="@+id/iv_hint"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:visibility="visible" />

        <TextView
            android:id="@+id/action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/iv_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="24dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_centerInParent="true">

    </TextView>

</RelativeLayout>
