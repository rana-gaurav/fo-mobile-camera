<?xml version="1.0" encoding="utf-8"?><!-- Layout that display the preview of all capture images -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_list_color"
    android:visibility="visible">
    <!--This need too be end b4 recyclerView-->

    <include
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        layout="@layout/my_toolbar" />

    <FrameLayout
        android:id="@+id/fl_list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout">

        <com.ryan.rv_gallery.GalleryRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            app:helper="PagerSnapHelper"
            android:layout_height="match_parent"
            android:background="#3fffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/custom_border"
                android:orientation="vertical" />

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>