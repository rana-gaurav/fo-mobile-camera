<?xml version="1.0" encoding="utf-8"?><!-- Layout that display the preview of all capture images -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a7c0cd"
    android:visibility="visible">
    <!--This need too be end b4 recyclerView-->

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/my_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="14dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout">

        <ImageView
            android:id="@+id/iv_preview1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:rotation="270"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_preview"
            app:srcCompat="@drawable/ic_android"
            tools:ignore="NotSibling" />

        <RadioGroup
            android:id="@+id/rg_group1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:background="@drawable/pink_out_line"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_save1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/green"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/rb_del1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/red"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fl_list1"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_preview">

        <com.ryan.rv_gallery.GalleryRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="#3fffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_border"
                android:orientation="vertical" />

        </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>