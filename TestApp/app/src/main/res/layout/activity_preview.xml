<?xml version="1.0" encoding="utf-8"?><!-- Layout that display the preview of all capture images -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_list_color"
    android:visibility="visible">
    <!--This need too be end b4 recyclerView-->

    <include
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        layout="@layout/my_toolbar" />

    <LinearLayout
        android:id="@+id/ll_preview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/upper_drawable"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout">

        <ImageView
            android:id="@+id/iv_preview1"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:rotation="270" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_group1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:background="@drawable/lower_drawable"
        app:layout_constraintStart_toStartOf="@+id/ll_preview1"
        app:layout_constraintTop_toBottomOf="@+id/ll_preview1">

        <RadioButton
            android:id="@+id/rb_save1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background"
            android:button="@null"
            android:gravity="center"
            android:text="Save"
            android:textSize="20dp"
            android:textColor="@color/green"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/rb_del1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget_background"
            android:button="@null"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/red"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout">

        <com.ryan.rv_gallery.GalleryRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            app:helper="PagerSnapHelper"
            android:layout_height="match_parent"
            android:background="#3fffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/custom_border"
                android:orientation="vertical" />

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>